{
   "compilerOptions": {
      "allowUnreachableCode": false,
      "alwaysStrict": true,
      "declaration": true,
      "lib": ["ES2016", "DOM"],
      "module": "ES6",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "dist",
      "removeComments": true,
      "sourceMap": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "target": "ES2016"
   },
   "include": [
      "src/**/*"
   ]
}
